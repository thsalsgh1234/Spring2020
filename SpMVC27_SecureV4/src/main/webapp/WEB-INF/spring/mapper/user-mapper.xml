<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 <mapper namespace="com.biz.sec.persistance.UserDao">

	<select id="findByUserName" resultMap="userAndAuthorities">
		SELECT id, 
		user_name AS username, 
		user_pass AS password, 
		enabled, 
		email,phone,address 
		FROM tbl_users WHERE user_name = #{username}
	</select>

	<select id="selectAll" resultMap="userAndAuthorities">
		SELECT user_name AS username,
			user_pass AS password,
			email, phone,address 
		FROM tbl_users
	</select>

	<resultMap type="userDetailsVO" 
				id="userAndAuthorities">
	
		<id column="id" property="id"/>
		<result property="username" 
				column="username"/>
				
		<collection property="authorities" 
				column="username"
				ofType="authorityVO" 
				select="findByUserNameAuthorities"/>
				
	</resultMap> 
	
 	<select id="findById" 
 				resultMap="userAndAuthorities">
 		SELECT id,
 			user_name AS username,
 			user_pass AS password,
 			enabled,
 			email,
 			phone,
 			address
 		FROM tbl_users WHERE id = #{id}
 	</select>
 	
 	<select id="findByUserNameAuthorities" 
 				resultType="authorityVO">
 		SELECT * 
 		FROM authorities 
 		WHERE username=#{username}
 	</select>

 	<select id="create_table">
 		${create_table}
 	</select>
 
 	<insert id="insert">
 		INSERT INTO `tbl_users` (
 				`user_name`,
				`user_pass`,
				`enabled`
			)VALUES	(
			
				#{username},
				#{password},
				true
			)
 	</insert>
 	
 	<update id="update" parameterType="userDetailsVO">
 		UPDATE tbl_users
 		SET email = #{email},
 			phone = #{phone},
 			address = #{address},
 			enabled = #{enabled}
 		WHERE user_name = #{username}
 	</update>
 </mapper>
 
 
 
 